if [ -z "$JAVA_HOME" ]; then
  echo "JAVA_HOME environment variable not defined"
  exit
fi

CP=ant.jar;
CP=$CP:ant-launcher.jar
CP=$CP:ant-junit.jar
CP=$CP:ant-jsch.jar
CP=$CP:../lib/maven-artifact-ant-2.0.4-dep.jar
CP=$CP:../lib/junit.jar
CP=$CP:../lib/jsch-0.1.28.jar
CP=$CP:$JAVA_HOME/lib/tools.jar

$JAVA_HOME/bin/java -cp $CP org.apache.tools.ant.Main $@

